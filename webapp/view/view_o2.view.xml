<mvc:View
    controllerName="viewo2.controller.view_o2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="{i18n>airlinePageTitle}">
        <content>

            <Table
                id="airlineTable"
                inset="false"
                headerText="{i18n>airlineTableHeader}"
                items="{ path: 'flightDataModel>/' }">

                <columns>
                    <Column><Text text="{i18n>colCarrid}" /></Column>
                    <Column><Text text="{i18n>colCarrname}" /></Column>
                    <Column><Text text="{i18n>colUrl}" /></Column>
                </columns>

                <items>
                    <ColumnListItem type="Active" press=".onItemPress">
                        <cells>
                            <Text text="{flightDataModel>Carrid}" />
                            <Text text="{flightDataModel>Carrname}" />
                            <Link text="{flightDataModel>Url}" href="{flightDataModel>Url}" target="_blank" />
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>

        </content>
    </Page>
</mvc:View>
